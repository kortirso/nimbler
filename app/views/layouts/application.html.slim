doctype html
html
    head
        title Nimbler
        = stylesheet_link_tag 'application', media: 'all'
        = javascript_include_tag 'application'
        = csrf_meta_tags
    body
        .inside
            .shadow
        = render 'layouts/login_modal'
        = render 'layouts/sign_up_modal'
        = render 'layouts/nav'
        .container
            .row
                .col-xs-12
                    = yield
